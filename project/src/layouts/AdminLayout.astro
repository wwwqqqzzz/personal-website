---
import '@fontsource/montserrat/400.css';
import '@fontsource/montserrat/500.css';
import '@fontsource/montserrat/600.css';
import '@fontsource/montserrat/700.css';
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="王起哲的个人网站" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - 管理后台</title>
  </head>
  <body class="bg-[#1E1E3F] text-white">
    <div class="flex h-screen">
      <!-- 侧边栏 -->
      <aside class="w-64 bg-gray-900 border-r border-gray-800">
        <div class="p-4">
          <h1 class="text-xl font-bold text-purple-400">管理后台</h1>
        </div>
        <nav class="mt-4">
          <a 
            href="/admin/dashboard" 
            class="flex items-center px-4 py-2 text-gray-400 hover:text-white hover:bg-gray-800"
          >
            <i class="fas fa-chart-line w-6"></i>
            <span>仪表盘</span>
          </a>
          <a 
            href="/admin/posts" 
            class="flex items-center px-4 py-2 text-gray-400 hover:text-white hover:bg-gray-800"
          >
            <i class="fas fa-newspaper w-6"></i>
            <span>文章管理</span>
          </a>
          <a 
            href="/admin/portfolio" 
            class="flex items-center px-4 py-2 text-gray-400 hover:text-white hover:bg-gray-800"
          >
            <i class="fas fa-briefcase w-6"></i>
            <span>作品管理</span>
          </a>
          <a 
            href="/admin/settings" 
            class="flex items-center px-4 py-2 text-gray-400 hover:text-white hover:bg-gray-800"
          >
            <i class="fas fa-cog w-6"></i>
            <span>系统设置</span>
          </a>
        </nav>
      </aside>

      <!-- 主要内容区 -->
      <main class="flex-1 overflow-auto">
        <header class="bg-gray-900 border-b border-gray-800 p-4">
          <div class="flex justify-between items-center">
            <h2 class="text-xl font-semibold">{title}</h2>
            <div class="flex items-center gap-4">
              <button class="text-gray-400 hover:text-white">
                <i class="fas fa-bell"></i>
              </button>
              <button class="text-gray-400 hover:text-white">
                <i class="fas fa-user-circle"></i>
              </button>
            </div>
          </div>
        </header>
        
        <div class="p-6">
          <slot />
        </div>
      </main>
    </div>

    <script>
      // 检查登录状态
      if (!localStorage.getItem('token') && window.location.pathname !== '/admin/login') {
        window.location.href = '/admin/login';
      }
    </script>
  </body>
</html> 