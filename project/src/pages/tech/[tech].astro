const { tech } = Astro.props;

import Layout from '../../layouts/Layout.astro';
---

<Layout title={`${tech.name} | 技术详情`}>
  <div class="min-h-screen py-20 px-8">
    <div class="max-w-[108rem] mx-auto">
      <div class="text-center mb-16">
        <i class={`${tech.icon} text-[8rem]`} style={`color: ${tech.iconColor}`}></i>
        <h1 class="color__gradiente text-[5rem] mt-4">{tech.name}</h1>
      </div>
      
      <div class="glass-morphism p-8 mb-16">
        <p class="text-[2rem] mb-8">{tech.description}</p>
        
        <h2 class="color__gradiente text-[3rem] mb-6">主要特性</h2>
        <ul class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-12">
          {tech.features.map(feature => (
            <li class="flex items-center gap-4 text-[1.8rem]">
              <i class="fas fa-check text-[#58f9ff]"></i>
              {feature}
            </li>
          ))}
        </ul>
        
        <h2 class="color__gradiente text-[3rem] mb-6">学习资源</h2>
        <ul class="space-y-4">
          {tech.resources.map(resource => (
            <li>
              <a 
                href={resource.url}
                target="_blank"
                class="text-[1.8rem] tech-link"
              >
                {resource.name}
                <i class="fas fa-external-link-alt ml-2"></i>
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <div class="text-center">
        <a href="/#skills" class="more-button">
          <i class="fas fa-arrow-left"></i>
          返回技术栈
        </a>
      </div>
    </div>
  </div>
</Layout>