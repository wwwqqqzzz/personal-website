---
import Layout from '../layouts/Layout.astro';
import SignUpComponent from '../components/auth/SignUpComponent';

const publishableKey = import.meta.env.PUBLIC_CLERK_PUBLISHABLE_KEY;
---

<Layout title="注册">
  <main class="min-h-screen flex items-center justify-center">
    <div class="w-full max-w-6xl p-8">
      <div class="text-center mb-8">
        <h1 class="text-5xl font-bold text-white mb-4">创建账号</h1>
        <p class="text-xl text-gray-400 mb-4">加入我们的社区</p>
        <div class="flex items-center justify-center gap-2 text-lg">
          <span class="text-gray-400">已有账号？</span>
          <a href="/sign-in" class="text-purple-500 hover:text-purple-400 font-medium">立即登录</a>
        </div>
      </div>
      
      <div class="bg-gray-900/50 backdrop-blur-lg rounded-2xl p-12 border border-purple-500/20 min-h-[600px]">
        <SignUpComponent client:only="react" />
      </div>
    </div>
  </main>
</Layout> 